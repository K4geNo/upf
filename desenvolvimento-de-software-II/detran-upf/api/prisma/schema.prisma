generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  personName         String
  cpf                String   @unique
  addressDescription String?
  birthDate          DateTime
  phone              String
  email              String?
  pcd                Boolean
  createdAt          DateTime @default(now())

  driverLicense DriverLicense[]
  userVehicle   UserVehicle[]
  infractions   Infractions[]

  @@map("users")
}

model DriverLicense {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  number    String
  category  String
  validity  DateTime
  points    Int
  createdAt DateTime @default(now())

  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id])

  @@map("driver_licenses")
}

model Vehicle {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  brand             String
  licensePlate      String
  color             String
  manufacturingYear Int
  model             String
  type              Int
  ipvaPaid          Boolean
  ipvaValue         Int
  createdAt         DateTime @default(now())

  ipva        Ipva[]
  userVehicle UserVehicle[]
  infractions Infractions[]

  @@map("vehicles")
}

model Ipva {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  value       Float
  paymentDate DateTime
  currentYear Int
  createdAt   DateTime @default(now())

  vehicleId String  @db.ObjectId
  vehicle   Vehicle @relation(fields: [vehicleId], references: [id])

  @@map("ipvas")
}

model UserVehicle {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  userId    String  @db.ObjectId
  vehicleId String  @db.ObjectId
  user      User    @relation(fields: [userId], references: [id])
  vehicle   Vehicle @relation(fields: [vehicleId], references: [id])

  @@unique([userId, vehicleId], name: "userId_vehicleId")
  @@map("user_vehicles")
}

model Infractions {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  vehicleId String   @db.ObjectId
  userId    String   @db.ObjectId
  value     Float
  date      DateTime
  points    Int
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  vehicle   Vehicle  @relation(fields: [vehicleId], references: [id])

  @@map("infractions")
}
